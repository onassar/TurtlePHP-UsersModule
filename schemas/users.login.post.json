[
    {
        "validator": ["DataValidator", "dataPosted"],
        "blocking": true,
        "error": {
            "reference": "users.login.post.0"
        }
    },
    {
        "validator": ["Modules\\Users\\SecurityValidator", "validCsrfToken"],
        "params": ["{csrfToken}"],
        "blocking": true,
        "error": {
            "reference": "users.login.post.1"
        }
    },
    {
        "validator": ["Modules\\Users\\UserValidator", "isLoggedOut"],
        "blocking": true,
        "error": {
            "reference": "users.login.post.2"
        }
    },
    {
        "validator": ["StringValidator", "notEmpty"],
        "params": ["{email}"],
        "blocking": true,
        "error": {
            "reference": "users.login.post.3",
            "input": "email",
            "message": "Please enter your email."
        }
    },
    {
        "validator": ["StringValidator", "notEmpty"],
        "params": ["{password}"],
        "blocking": true,
        "error": {
            "reference": "users.login.post.4",
            "input": "password",
            "message": "Please enter your password."
        },
        "rules": [
            {
                "validator": ["Modules\\Users\\UserValidator", "validUserCriteria"],
                "params": ["{email}", "{password}"],
                "blocking": true,
                "error": {
                    "reference": "users.login.post.5",
                    "input": "password",
                    "message": "Could not log you in. Try again."
                }
            }
        ]
    }
]
